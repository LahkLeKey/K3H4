{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "bun:dev",
      "type": "shell",
      "command": "bun",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/apps/www.k3h4.io"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "bun",
          "fileLocation": "autoDetect",
          "pattern": [
            {
              "regexp": "^\\s*(.+?):(\\d+):(\\d+):\\s*(error|warning)\\s*:?\\s*(.*)$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^bun run dev",
            "endsPattern": "Dev server running at http://localhost:[0-9]+"
          }
        }
      ]
    },
    {
      "label": "compose:up",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "up", "--build", "--wait"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "compose:down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "down"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "compose:rebuild",
      "dependsOn": ["compose:down", "compose:up"],
      "dependsOrder": "sequence",
      "type": "shell",
      "command": "echo",
      "args": ["compose rebuilt"],
      "problemMatcher": []
    }
  ]
}
