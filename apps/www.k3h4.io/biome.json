{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": ["@biomejs/biome/configs/recommended"],
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["dist/**", "node_modules/**"],
    "include": ["src/**/*", "scripts/**/*"]
  },
  "javascript": {
    "globals": {
      "Bun": "readonly"
    }
  }
}
