generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  provider       String
  providerId     String
  k3h4CoinBalance Decimal         @default("0") @db.Decimal(18, 2) // sandbox-only play balance
  displayName    String?
  avatarUrl      String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  refreshTokens  RefreshToken[]
  preference     UserPreference?
  telemetry      TelemetryEvent[]
  bankTransactions BankTransaction[]
  personas       Persona[]
  assignments    Assignment[]
  freightLoads   FreightLoad[]

  @@unique([provider, providerId])
}

model Persona {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  alias     String
  account   String
  handle    String?
  note      String?
  tags      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments Assignment[]
  assignmentPayouts AssignmentPayout[]

  @@index([userId, alias])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model UserPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme          String   @default("system")
  locale         String   @default("en-US")
  timezone       String   @default("UTC")
  marketingOptIn Boolean  @default(false)
  note           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model TelemetryEvent {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  sessionId String
  eventType String
  source    String
  path      String?
  payload   Json?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([sessionId])
  @@index([eventType])
}

model BankTransaction {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount       Decimal  @db.Decimal(18, 2)
  kind         String
  direction    String
  note         String?
  balanceAfter Decimal  @db.Decimal(18, 2)
  createdAt    DateTime @default(now())

  @@index([userId, createdAt])
}

model Assignment {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  personaId    String
  persona      Persona   @relation(fields: [personaId], references: [id], onDelete: Cascade)
  title        String
  hourlyRate   Decimal   @db.Decimal(18, 2)
  status       String    @default("open")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  timecards    AssignmentTimecard[]
  payouts      AssignmentPayout[]

  @@index([userId, personaId])
}

model AssignmentTimecard {
  id           String   @id @default(cuid())
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  hours        Decimal  @db.Decimal(10, 2)
  amount       Decimal  @db.Decimal(18, 2)
  note         String?
  status       String   @default("approved")
  createdAt    DateTime @default(now())

  @@index([assignmentId, status])
}

model AssignmentPayout {
  id           String   @id @default(cuid())
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  personaId    String
  persona      Persona  @relation(fields: [personaId], references: [id], onDelete: Cascade)
  amount       Decimal  @db.Decimal(18, 2)
  note         String?
  invoiceUrl   String?
  status       String   @default("paid")
  createdAt    DateTime @default(now())

  @@index([assignmentId, personaId])
}

model FreightLoad {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String
  originName      String
  originLat       Float
  originLng       Float
  destinationName String
  destinationLat  Float
  destinationLng  Float
  distanceKm      Decimal  @db.Decimal(10, 2)
  durationMinutes Int
  cost            Decimal  @db.Decimal(18, 2)
  status          String   @default("planning")
  routeGeoJson    Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId, status])
}
