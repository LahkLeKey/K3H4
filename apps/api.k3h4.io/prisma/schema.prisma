generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  provider       String
  providerId     String
  k3h4CoinBalance Decimal         @default("0") @db.Decimal(18, 2) // sandbox-only play balance
  displayName    String?
  avatarUrl      String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  refreshTokens  RefreshToken[]
  preference     UserPreference?
  telemetry      TelemetryEvent[]
  bankTransactions BankTransaction[]
  personas       Persona[]
  assignments    Assignment[]
  freightLoads   FreightLoad[]
  warehouseItems WarehouseItem[]
  posStores      PosStore[]
  posTickets     PosTicket[]
  agriculturePlots AgriculturePlot[]
  agricultureTasks AgricultureTask[]
  agricultureShipments AgricultureShipment[]
  culinaryMenuItems CulinaryMenuItem[]
  culinaryPrepTasks CulinaryPrepTask[]
  culinarySupplierNeeds CulinarySupplierNeed[]
  arcadeMachines ArcadeMachine[]
  arcadeCards    ArcadeCard[]
  arcadeTopUps   ArcadeTopUp[]
  arcadePrizes   ArcadePrize[]
  arcadeSessions ArcadeSession[]
  arcadeRedemptions ArcadeRedemption[]
  providerGrants ProviderGrant[]

  @@unique([provider, providerId])
}

model Persona {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  alias     String
  account   String
  handle    String?
  note      String?
  tags      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments Assignment[]
  assignmentPayouts AssignmentPayout[]

  @@index([userId, alias])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model ProviderGrant {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider   String
  providerId String
  accessToken String
  scope      String?
  expiresAt  DateTime?
  createdAt  DateTime @default(now())

  @@unique([provider, providerId])
}

model UserPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme          String   @default("system")
  locale         String   @default("en-US")
  timezone       String   @default("UTC")
  marketingOptIn Boolean  @default(false)
  note           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model TelemetryEvent {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  sessionId String
  eventType String
  source    String
  path      String?
  payload   Json?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([sessionId])
  @@index([eventType])
}

model BankTransaction {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount       Decimal  @db.Decimal(18, 2)
  kind         String
  direction    String
  note         String?
  balanceAfter Decimal  @db.Decimal(18, 2)
  createdAt    DateTime @default(now())

  @@index([userId, createdAt])
}

model Assignment {
  id           String    @id @default(cuid())
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  personaId    String
  persona      Persona   @relation(fields: [personaId], references: [id], onDelete: Cascade)
  title        String
  hourlyRate   Decimal   @db.Decimal(18, 2)
  status       String    @default("open")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  timecards    AssignmentTimecard[]
  payouts      AssignmentPayout[]

  @@index([userId, personaId])
}

model AssignmentTimecard {
  id           String   @id @default(cuid())
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  hours        Decimal  @db.Decimal(10, 2)
  amount       Decimal  @db.Decimal(18, 2)
  note         String?
  status       String   @default("approved")
  createdAt    DateTime @default(now())

  @@index([assignmentId, status])
}

model AssignmentPayout {
  id           String   @id @default(cuid())
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  personaId    String
  persona      Persona  @relation(fields: [personaId], references: [id], onDelete: Cascade)
  amount       Decimal  @db.Decimal(18, 2)
  note         String?
  invoiceUrl   String?
  status       String   @default("paid")
  createdAt    DateTime @default(now())

  @@index([assignmentId, personaId])
}

model FreightLoad {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String
  originName      String
  originLat       Float
  originLng       Float
  destinationName String
  destinationLat  Float
  destinationLng  Float
  distanceKm      Decimal  @db.Decimal(10, 2)
  durationMinutes Int
  cost            Decimal  @db.Decimal(18, 2)
  status          String   @default("planning")
  routeGeoJson    Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  warehouseItems  WarehouseItem[]
  agricultureShipments AgricultureShipment[]

  @@index([userId, status])
}

model WarehouseItem {
  id            String        @id @default(cuid())
  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sku           String
  description   String?
  quantity      Int           @default(0)
  location      String
  status        String        @default("stored")
  freightLoadId String?
  freightLoad   FreightLoad?  @relation(fields: [freightLoadId], references: [id], onDelete: SetNull)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([userId, status])
  @@index([userId, freightLoadId])
}

model PosStore {
  id      String @id @default(cuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  name    String
  channel String
  tickets PosTicket[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@unique([userId, name])
}

model PosTicket {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  storeId    String
  store      PosStore @relation(fields: [storeId], references: [id], onDelete: Cascade)
  total      Decimal  @db.Decimal(18, 2)
  itemsCount Int      @default(0)
  channel    String
  status     String   @default("open")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  lineItems  PosLineItem[]

  @@index([userId, storeId])
  @@index([userId, channel])
  @@index([userId, createdAt])
}

model PosLineItem {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    PosTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  name      String
  quantity  Int      @default(1)
  price     Decimal  @db.Decimal(18, 2)
  createdAt DateTime @default(now())

  @@index([ticketId])
}

model AgriculturePlot {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  crop      String
  stage     String
  acres     Decimal  @db.Decimal(10, 2)
  health    String   @default("Unknown")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, crop])
}

model AgricultureTask {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  assignee  String?
  dueDate   DateTime?
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
  @@index([userId, dueDate])
}

model AgricultureShipment {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lot           String
  destination   String
  mode          String
  eta           DateTime?
  freightLoadId String?
  freightLoad   FreightLoad? @relation(fields: [freightLoadId], references: [id], onDelete: SetNull)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([userId, freightLoadId])
}

model CulinaryMenuItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  prepMinutes Int
  cost      Decimal  @db.Decimal(18, 2)
  price     Decimal  @db.Decimal(18, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, name])
}

model CulinaryPrepTask {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      String
  station   String
  dueAt     DateTime?
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
}

model CulinarySupplierNeed {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item      String
  quantity  String
  status    String   @default("open")
  dueDate   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, status])
}

model ArcadeMachine {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  gameTitle   String
  status      String   @default("idle")
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sessions    ArcadeSession[]

  @@index([userId, status])
}

model ArcadeCard {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label     String?
  balance   Decimal  @db.Decimal(18, 2) @default("0")
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  topUps    ArcadeTopUp[]
  sessions  ArcadeSession[]
  redemptions ArcadeRedemption[]

  @@index([userId, status])
}

model ArcadeTopUp {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardId    String
  card      ArcadeCard @relation(fields: [cardId], references: [id], onDelete: Cascade)
  amount    Decimal  @db.Decimal(18, 2)
  source    String   @default("k3h4-coin")
  createdAt DateTime @default(now())

  @@index([userId, cardId])
}

model ArcadePrize {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  sku       String?
  costCoins Decimal  @db.Decimal(18, 2)
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  redemptions ArcadeRedemption[]

  @@index([userId, name])
}

model ArcadeSession {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  machineId   String
  machine     ArcadeMachine @relation(fields: [machineId], references: [id], onDelete: Cascade)
  cardId      String
  card        ArcadeCard @relation(fields: [cardId], references: [id], onDelete: Cascade)
  creditsSpent Decimal  @db.Decimal(18, 2)
  score       Int?
  rewardRedemptionId String?
  rewardRedemption   ArcadeRedemption? @relation(fields: [rewardRedemptionId], references: [id], onDelete: SetNull)
  startedAt   DateTime @default(now())
  endedAt     DateTime?

  @@index([userId, machineId])
  @@index([userId, cardId])
}

model ArcadeRedemption {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardId    String?
  card      ArcadeCard? @relation(fields: [cardId], references: [id], onDelete: SetNull)
  prizeId   String
  prize     ArcadePrize @relation(fields: [prizeId], references: [id], onDelete: Cascade)
  status    String   @default("pending")
  fulfilledAt DateTime?
  createdAt DateTime @default(now())

  sessions  ArcadeSession[]

  @@index([userId, prizeId])
}
